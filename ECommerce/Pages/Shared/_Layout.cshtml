<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewData["Title"] - ECommerce</title>


    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/fontawesome/js/all.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://www.paypal.com/sdk/js?client-id=AXVJxoO1qLZxEn2pU7S8_XQ1c18gW2a2QyqE1cuXTZ9pXTOeYOoBQ32v4mB3koaNYJLIYUORgMo-WEol">
    </script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom bg-custom">
        <div class="container">
            <a asp-page="/Index" class="navbar-brand"><img  src="/images/Logos/brand.png" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @*<a asp-page="/Store" asp-route-identity="Mens" class="nav-link">Mens</a>*@
                        <a asp-page="/Products" asp-route-product="Shirts" asp-route-identity="Mens" class="nav-link">Men</a>
                    </li>
                    <li class="nav-item">
                        @*<a asp-page="/Store" asp-route-identity="Womens" class="nav-link" role="button">Womens</a>*@
                        <a asp-page="/Products" asp-route-product="Shirts" asp-route-identity="Womens" class="nav-link">Women</a>
                    </li>
                    @if (User.Identity.Name == "odaistephens2014@gmail.com")
                    {
                        <li class="nav-item active">
                            <a asp-page="/Admin/Admin" class="nav-link">Admin</a>
                        </li>
                    }
                </ul>
                <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial"/>
                        <li class="nav-item">
                            <a asp-page="/WishList"><i class="fas fa-heart navbar-icon"></i></a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/ShoppingBag"><i class="fas fa-shopping-bag navbar-icon"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container-fluid"></div>
            <div class="row text-center">
                <div class="col-md-4">
                    <h5>Help</h5>
                    <hr>
                    <p>Help</p>
                </div>

                <div class="col-md-4">
                    <h5>Social Networks</h5>
                    <hr>
                    <img src="https://img.icons8.com/color/48/000000/facebook.png">
                    <img src="https://img.icons8.com/color/48/000000/snapchat-circled-logo.png">
                    <img src="https://img.icons8.com/color/48/000000/instagram-new.png">
                    <img src="https://img.icons8.com/color/48/000000/twitter.png">
                </div>

                <div class="col-md-4">
                    <h5>About ECommerce</h5>
                    <hr>
                    <p>Contact Us</p>
                </div>
            </div>
            <p class="text-center">&copy; 2019 - ECommerce</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
